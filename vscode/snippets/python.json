	"Class initialize": {
		"prefix": "class",
		"body": [
			"class $1(${2:object}):",
			"	def __init__(self$3):",
			"		$4",
		],
		"description": "Initialize a class"
	},
	"List comprehension": {
		"prefix": "list",
		"body": [
			"[${1:x} for ${2:x} in $3]"
		],
		"description": "列表推导式"
	},
}